@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
    <tr style="height:40px">
        <td>Họ tên khách hàng:</td>
        <td>@Html.TextBox("HoTen")</td>
    </tr>
    <tr style="height:40px">
        <td>Địa chỉ:</td>
        <td>@Html.TextBox("DiaChi")</td>
    </tr>
    <tr style="height:40px">
        <td>Điện thoại:</td>
        <td>@Html.TextBox("Sdt")</td>
    </tr>
    <tr style="height:40px">
        <td>Tên đăng nhập:</td>
        <td>@Html.TextBox("TaiKhoan")</td>
    </tr>
    <tr style="height:40px">
        <td>Mật khẩu:</td>
        <td>@Html.Password("MK1")</td>
    </tr>
    <tr style="height:40px">
        <td>Nhập lại mật khẩu:</td>
        <td>@Html.Password("MK2")</td>
    </tr>
    <tr>
        <td></td>
        <td><input type="submit" class="btn btn-danger" value="ĐĂNG KÝ"/></td>
    </tr>
    <tr>
        <td colspan="2">
            <font color="red" id="thongBao">
                @ViewData["Loi1"]
                @ViewData["Loi2"]
                @ViewData["Loi3"]
                @ViewData["Loi4"]
                </font>
</td>
    </tr>
    }
</table>